@page
@model CadastroPacienteModel
@{
    ViewData["Title"] = "Cadastro do Paciente - Clínica BelleVie";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/cadastro.css">
</head>
<body>
    <header>
        <nav>
            <a asp-page="/Index">Home</a>
            <a asp-page="/Agendamento">Agendamento</a>
            <a asp-page="/CadastroMedico">Cadastro Médico</a>
            <a asp-page="/CadastroCliente">Cadastro Cliente</a>
            <a asp-page="/SobreNos">Sobre nós</a>
        </nav>
    </header>

    <main>
        <div class="container">
            <h1>Cadastro do Paciente</h1>
            <form method="post">
                <label for="nome">Nome:</label>
                <input type="text" id="nome" name="Paciente.Nome" required>

                <label for="telefone">Telefone:</label>
                <input type="tel" id="telefone" name="Paciente.Telefone" required>

                <label for="email">Email:</label>
                <input type="email" id="email" name="Paciente.Email" required>

                <label for="cpf">CPF:</label>
                <input type="text" id="cpf" name="Paciente.CPF" required>

                <label for="cep">CEP:</label>
                <input type="text" id="cep" name="Paciente.CEP" required>

                <label for="endereco">Endereço:</label>
                <input type="text" id="endereco" name="Paciente.Endereco" required>

                <label for="bairro">Bairro:</label>
                <input type="text" id="bairro" name="Paciente.Bairro" required>

                <input type="submit" value="Cadastrar">
            </form>
        </div>
    </main>
</body>
</html>
